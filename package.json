{
  "name": "pcard",
  "version": "0.0.1",
  "description": "Your contact app re√Ømagined",
  "author": "Peter van der Steen <pvdsteen@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pvds/pcard"
  },
  "bugs": "https://github.com/pvds/pcard/issues",
  "keywords": [
    "npm",
    "scripts",
    "npm scripts",
    "watch",
    "minify",
    "compress"
  ],
  "scripts": {
    "clean": "rimraf app/dist && mkdirp app/dist/scripts",
    "sass": "node-sass -o app/dist/styles src/styles",
    "postcss": "postcss -u autoprefixer -b \"last 2 versions\" -u cssnano -r app/dist/styles/*.css",
    "lint": "eslint src/scripts",
    "babel": "babel src/scripts --out-file app/dist/scripts/app.js --presets=es2015,babili",
    "static": "run-p static:*",
    "static:imagemin": "imagemin src/images/**/* -o app/dist/images",
    "build": "npm run clean && run-p build:*",
    "build:css": "npm run sass -- --source-map true --output-style expanded && npm run postcss",
    "build:js": "npm run lint && npm run babel -- -s",
    "build:static": "npm run static",
    "deploy": "npm run clean && run-p deploy:*",
    "deploy:css": "npm run sass -- --output-style compressed && npm run postcss",
    "deploy:js": "npm run lint && npm run babel",
    "deploy:static": "npm run static",
    "start": "npm-run-all -p server start:*",
    "start:css": "onchange src/styles -- npm run build:css",
    "start:js": "onchange src/scripts -- npm run build:js",
    "start:images": "onchange src/images -- npm run static:imagemin",
    "server": "browser-sync start --watchEvents [add, change] -p pcard.dev --host pcard.dev --open external --files [app/dist, app/**/*.php]",
    "postinstall": "npm run build && npm start"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.6",
    "babel-cli": "^6.24.1",
    "babel-preset-babili": "^0.1.2",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.17.5",
    "copyfiles": "^1.0.0",
    "cssnano": "^3.10.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.10.1",
    "npm-run-all": "^3.1.1",
    "onchange": "^3.0.2",
    "postcss-cli": "^2.6.0",
    "rimraf": "^2.6.1",
    "standard": "^5.3.1",
    "svgo": "^0.7.1"
  }
}
